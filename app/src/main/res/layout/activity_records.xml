<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:clickable="true"
        android:id="@+id/tl_records"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/blue_band_dark"
        app:tabBackground="@drawable/light_dark_selector"
        app:tabMinWidth="300dp"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/dark"
        app:tabTextColor="@color/dark"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <View
        android:background="@color/gray_light"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_records"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>

</LinearLayout>
